<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Sales Tax Calculator</title>
    <link rel="stylesheet" href="../assets/styles.css">
    <script src="../assets/scripts.js"></script>
  </head>

  <body>
    <div class="container">
      <h1>Enter Your Products</h1>
      <form action="/calculate" method="post">
        <div id="items-container" class="items-container">
          <div class="item-fields" data-item-index="0">
            <label for="name_0">Item Name:</label>
            <input class="item-input" type="text" name="items[0][name]" id="name_0" required><br>

            <label for="quantity_0">Quantity:</label>
            <input class="item-input" type="number" name="items[0][quantity]" id="quantity_0" min="1" required><br>

            <label for="price_0">Price:</label>
            <input class="item-input" type="number" step="0.01" name="items[0][price]" id="price_0" min="0" required><br>

            <label for="imported_0">Imported:</label>
            <select class="item-input" name="items[0][imported]" id="imported_0" required>
              <option value="false">No</option>
              <option value="true">Yes</option>
            </select><br>

            <label for="tax_exempt_0">Tax Exempt:</label>
            <select class="item-input" name="items[0][tax_exempt]" id="tax_exempt_0" required>
              <option value="false">No</option>
              <option value="true">Yes</option>
            </select><br>
          </div>
        </div>

        <button class="button" type="button" onclick="addItemFields()">Add Another Item</button>
        <br><br>
        <input class="button" type="submit" value="Calculate">
      </form>
    </div>
  </body>
</html>